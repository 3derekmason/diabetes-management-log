{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "declaration": true,
    "outDir": "dist/",
    "strict": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "types": ["node"],
    "paths": {
      "@/*": ["*"]
    }
  },
  "exclude": ["node_modules"]
}